#!/usr/bin/env bash

mkdir -p src

# Binutils 2.28
wget -O src/binutils-2.28.tar.gz http://ftp.gnu.org/gnu/binutils/binutils-2.28.tar.gz
cd src
tar -zxvf binutils-2.28.tar.gz
cd ..

# GCC 6.3
wget -O src/gcc-6.3.0.tar.gz http://mirrors.concertpass.com/gcc/releases/gcc-6.3.0/gcc-6.3.0.tar.gz
cd src
tar -zxvf gcc-6.3.0.tar.gz
cd ..